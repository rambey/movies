<div id="modalMovie{{ movie.id }}" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe width="100%" height="345" src="http://www.youtube.com/embed/{{ trailer.key}}?autoplay=1" frameborder="0" allowfullscreen></iframe>

                </div>
                <h1 class="card-title mt-4">{{ movie.title}}</h1>
                <h5 class="card-title">Film: {{ movie.title}}  : {{ movie.vote_count }} vote </h5>
            </div>
        </div>
    </div>
</div>


